[user]
  name = Jochen Lillich
  email = jochen@lillich.info
[alias]
  # Abbreviations
  co = checkout
  cp = cherry-pick
  st = status -s
  cl = clone
  ci = commit
  co = checkout
  br = branch
  #
  # Branches
  #
  ours = "!f() { git co --ours $@ && git add $@; }; f"
  theirs = "!f() { git co --theirs $@ && git add $@; }; f"
  # Track remote branch
  track = checkout -t
  # Create new tracking branch
  ntb = "!f(){ git checkout -b \"$1\" && git push -u; }; f"
  # Delete branch on origin and locally
  nuke-branch = "!f(){ git push origin :$1 && git branch -d $1;  }; f"
  # Get current branch
  current-branch = !git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'
  # Rebase master on current branch
  rebase-upstream = "!f(){ git fetch origin && git rebase -i origin/master; }; f"
  # Safe push
  pf = "push --force-with-lease"
  #
  # Reset
  #
  unstage = reset HEAD --
  undo-commit = reset --soft
  clean = reset --hard
  #
  # diff
  #
  dlc = diff --cached HEAD^
  diff = diff --word-diff
  staged = diff --cached
  df = diff --word-diff --color-words
  dr  = "!f() { git diff "$1"^.."$1"; }; f"
  diffr  = "!f() { git diff "$1"^.."$1"; }; f"
  conflicts = diff --name-only --diff-filter=U
  vdf = difftool
  #
  # Misc
  #
  sl = stash list
  sa = stash apply
  ss = stash save
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
  lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
  le = log --oneline --decorate
  filelog = log -u
  fl = log -u
  dl = "!git ll -1"
  lc  = "!f() { git ll "$1"^.."$1"; }; f"
  grep = grep -Ii
  gr = grep -Ii
  assume = update-index --assume-unchanged
  assumeall = "!git st -s | awk {'print $2'} | xargs git assume"
  unassume = update-index --no-assume-unchanged
  unassumeall = "!git assumed | xargs git update-index --no-assume-unchanged"
  assumed = "!git ls-files -v | grep ^h | cut -c 3-"
  lasttag = describe --tags --abbrev=0
  lt = describe --tags --abbrev=0
[apply]
  whitespace = warn
[merge]
  tool = vimdiff
  conflictstyle = diff3
[core]
  excludesfile = /Users/geewiz/.gitignore
  editor = vim
[color]
  diff = auto
  status = auto
  branch = auto
  ui = always
[help]
  autocorrect = 1
[status]
  submodule = 1
[push]
  # Only push branches that have been set up to track a remote branch.
  default = current
[mergetool]
  keepBackup = true
  prompt = false
[github]
  user = geewiz
[diff]
  tool = vimdiff
[difftool "vimdiff"]
  cmd = vim -f -d \"$LOCAL\" \"$REMOTE\"
[commit]
  template = ~/.git_commit_template
[gitsh]
  noGreeting = true
  defaultCommand = status --short --branch && :echo
[fetch]
	prune = true
