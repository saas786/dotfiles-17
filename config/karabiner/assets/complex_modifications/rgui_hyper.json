{
  "title": "Turn right GUI key into Hyper key",
  "rules": [
    {
      "description": "Turn right GUI into Hyper",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_gui",
            "modifiers": {
              "optional": [
