{
  "title": "Swap Backspace and Backslash HHKB-like",
  "rules": [
    {
      "description": "Swap Backslash and Backspace",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "optional": [
                "shift",
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "backslash"
            }
          ]
        }
      ]
    }
  ]
}

